{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./lib",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom"]
  },
  "include": ["./"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
